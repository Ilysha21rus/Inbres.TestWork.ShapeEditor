<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SteamWorkshopExplorer.ViewModels"
        xmlns:models="clr-namespace:SteamWorkshopExplorer.Models"
        x:Class="SteamWorkshopExplorer.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Shapes Editor"
        Width="1800" Height="1200">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5" >
            <Button Content="Delete" Command="{Binding ClearCommand}" Margin="2"/>
            <Button Content="Add Ellipse" Command="{Binding AddEllipseCommand}" Margin="2"/>
            <Button Content="Add C Bezier" Command="{Binding AddBezierCommand}" Margin="2"/>
            <Button Content="Save" Click="OnSaveClicked"/>
            <Button Content="json" Click="OnLoadClicked"/>
        </StackPanel>
        
        <ItemsControl Items="{Binding Shapes}">
        <ItemsControl.ItemsPanel> 
        <ItemsPanelTemplate>
        <Canvas>
        </ItemsPanelTemplate>
        <ItemsControl.ItemsPanel>
            
            
        </ItemsControl>
    </DockPanel>
</Window>