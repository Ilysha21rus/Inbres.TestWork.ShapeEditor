<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SteamWorkshopExplorer.ViewModels"
             x:Class="SteamWorkshopExplorer.Views.BezierView"
             x:DataType="vm:BezierViewModel">
    <Canvas>
        <Path Stroke="Black" StrokeThickness="2">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="{Binding Start}">
                        <BezierSegment Point1="{Binding Control1}"
                                       Point2="{Binding Control2}"
                                       Point3="{Binding End}" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
    </Canvas>
</UserControl>